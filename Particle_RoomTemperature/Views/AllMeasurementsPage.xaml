<ContentPage
    x:Class="Particle_RoomTemperature.AllMeasurementsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{DynamicResource SecondaryColor}">
    <StackLayout>
        <CollectionView ItemsSource="{Binding Measurements}" BackgroundColor="Green">
            <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout BackgroundColor="Gray">
                    <Label Text="{Binding Temperature}" />
                    <Label Text="{Binding Humidity}" />
                    <Label Text="{Binding DateTime}" />
                    <Label Text="{Binding TemperatureVariation}" />
                    <Label Text="{Binding HumidityVariation}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        </CollectionView>
        </StackLayout>
</ContentPage>
